@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
 
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="~/css/index.style.css" />
  <style>
  
    
  .carousel-inner img {
      width: 100%; /* Set width to 100% */
      margin: auto;
      min-height:200px;
  }

  </style>
</head>
<body>
    <div class="align-content-lg-center" width ="10%">
        <img src="images/cover.jpg" alt="Image" style="width: 100%; height: 20%;">
    </div>




<div id="myCarousel" class="carousel slide"   data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
                <img src="images/img1.png" alt="Image" style="width:90% max-content:90%">
          
      </div>

      <div class="item">
                <img src="images/img2.jpg" alt="Image" >
             
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>
  

</div><br>


    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <center>
                        <h2>Our Features</h2>
                        <p><b>Our 3 Primary Features -</b></p>
                    </center>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <center>
                        <img width="150px" src="images/digital-inventory.png" />
                        <h4>E Learning Section</h4>
                        <p class="text-justify">Better lession tracking with new LMS. Never miss any lession through your lession.</p>
                    </center>
                </div>
                <div class="col-md-4">
                    <center>
                        <img width="150px" src="images/search-online.png" />
                        <h4>View Assigment</h4>
                        <p class="text-justify">
                            Student can view there ASSIGMENTs using this LMS and they can upload their answers related to the assignments.
                            </p>
                    </center>
                </div>
                <div class="col-md-4">
                    <center>
                        <img width="150px" src="images/defaulters-list.png" />
                        <h4>Teacher Access</h4>
                        <p class="text-justify">Teachers can manage all students work using this LMS also teachers can add Assignment and review those Assignment easily. </p>
                    </center>
                </div>
            </div>
        </div>
    </section>


    <br />
   
    <section class="align-content-center">
        
      
        


        <div class="container px-4">
            <div class="row gx-5">
                <div class="col shadow">
                    <div class="px-4 box-shadow">
                        <h2 class="">Hello Teachers</h2>
                        <h6 class="">Use This Button for your login</h6>
                        <button class="btn btn-outline-success btn-lg">
                            <a asp-page="/login_pages/teacher_login" style="color: black; text-decoration: none;" onMouseOver="this.style.color='#FFF'" onMouseOut="this.style.color='#198754'">Click Here To Login</a>
                        </button>
                        <br>
                     </div>
                </div>
                <div class="col shadow">
                    <div class="px-4 ">
                        <h2 class="">Hello Student</h2>
                        <h6>Use This Button for your login </h6>
                        <h6>If your registration not done yet plz contact your teacher.</h6>
                        <button class="btn btn-outline-danger btn-lg ">
                            <a asp-page="/login_pages/student_login" style="color: #dc3545; text-decoration: none;" onMouseOver="this.style.color='#FFF'" onMouseOut="this.style.color='#dc3545'">Click Here LOGIN</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <br />
    <br />


<footer class="container-fluid text-center">
  <p>Made By Abisheka - SLIIT Project</p>
</footer>

</body>
</html>
